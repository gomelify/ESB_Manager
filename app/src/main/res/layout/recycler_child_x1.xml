<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/cardView_default"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:text="Montag, 10.07.2017"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/colorTextAccent" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="?attr/colorControlHighlight" />

        <RelativeLayout
            android:id="@+id/relativDefault"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">


            <TextView
                android:id="@+id/txtInfoDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtHead"
                android:layout_alignStart="@+id/txtHead"
                android:layout_below="@+id/txtHead"
                android:layout_weight="1"
                android:text="Herr Beispiel ist ganz dolle krank :("
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtHead"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/txtHour"
                android:layout_toRightOf="@+id/txtHour"
                android:gravity="bottom"
                android:text="@string/cancelled"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/cancelledColor"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/txtHour"
                android:layout_width="57dp"
                android:layout_height="55dp"
                android:gravity="center"
                android:text="1-2"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/cancelledColor"
                android:textSize="28sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_weight="1"
            android:background="?attr/colorControlHighlight" />

        <RelativeLayout
            android:id="@+id/relativDefault2"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp">


            <TextView
                android:id="@+id/txtInfo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtHead2"
                android:layout_alignStart="@+id/txtHead2"
                android:layout_below="@+id/txtHead2"
                android:layout_weight="1"
                android:text="Herr Beispiel ist ganz dolle krank :("
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtHead2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/txtHour2"
                android:layout_toRightOf="@+id/txtHour2"
                android:gravity="bottom"
                android:text="@string/cancelled"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/cancelledColor"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/txtHour2"
                android:layout_width="57dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="1-2"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/cancelledColor"
                android:textSize="28sp" />

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>