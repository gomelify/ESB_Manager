<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/timetableCardView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardBackgroundColor="@color/MaterialBlue"
        app:cardCornerRadius="0dp">

        <TextView
            android:id="@+id/timetableLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Technische Informatik"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="25dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/timetableRoomImg"
                android:layout_width="30dp"
                android:layout_height="43dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:tint="@color/Grey"
                app:srcCompat="@drawable/ic_room_black_24dp" />

            <TextView
                android:id="@+id/txtViewRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/timetableRoomImg"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@+id/timetableRoomImg"
                android:layout_toRightOf="@+id/timetableRoomImg"
                android:text="Raum"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/timetableRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtViewRoom"
                android:layout_alignStart="@+id/txtViewRoom"
                android:layout_below="@+id/txtViewRoom"
                android:text="E202"
                android:textSize="17sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/timetableTeacherImg"
                android:layout_width="30dp"
                android:layout_height="43dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:tint="@color/Grey"
                app:srcCompat="@drawable/ic_person_black_24dp" />

            <TextView
                android:id="@+id/txtViewTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/timetableTeacherImg"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@+id/timetableTeacherImg"
                android:layout_toRightOf="@+id/timetableTeacherImg"
                android:text="Lehrer"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/timetableTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtViewTeacher"
                android:layout_alignStart="@+id/txtViewTeacher"
                android:layout_below="@+id/txtViewTeacher"
                android:text="Frau Fretter"
                android:textSize="17sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/timetableTimeImg"
                android:layout_width="30dp"
                android:layout_height="43dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:tint="@color/Grey"
                app:srcCompat="@drawable/ic_access_time_black_24dp" />

            <TextView
                android:id="@+id/txtViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/timetableTimeImg"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@+id/timetableTimeImg"
                android:layout_toRightOf="@+id/timetableTimeImg"
                android:text="Zeit"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/timetableTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtViewTime"
                android:layout_alignStart="@+id/txtViewTime"
                android:layout_below="@+id/txtViewTime"
                android:text="8:00 - 9:30 Uhr"
                android:textSize="17sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>