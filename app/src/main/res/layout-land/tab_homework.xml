<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtern: "
                android:textColor="@android:color/background_dark"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <Spinner
                android:id="@+id/spinnerTabHomework"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/homework_tab_spinner"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"/>

            <Button
                android:id="@+id/btnAddHomework"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="30dp"
                android:background="@color/colorFAB"
                android:foreground="?attr/selectableItemBackground"
                android:text="HinzufÃ¼gen"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorControlHighlight" />

        <TextView
            android:id="@+id/txtNoHomework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:text="@string/no_homework"
            android:textSize="18sp"
            android:visibility="gone" />

        <ListView
            android:id="@+id/listViewHomework"
            android:layout_width="match_parent"
            android:layout_height="1000dp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>