<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewHours"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="1-2"
            android:textAlignment="center"
            android:textColor="@color/cancelledColor"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/textViewCase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textViewHours"
            android:layout_toRightOf="@+id/textViewHours"
            android:paddingLeft="15dp"
            android:text="@string/cancellation"
            android:textColor="@color/cancelledColor"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewHours"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/imgDate"
            android:layout_toRightOf="@+id/imgDate"
            android:text="Datum"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtViewClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtClassDetail"
            android:layout_alignLeft="@+id/txtDateDetail"
            android:layout_alignStart="@+id/txtDateDetail"
            android:text="Klasse"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtInfoDetail"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/imgDescription"
            android:layout_toRightOf="@+id/imgDescription"
            android:text="Beschreibung"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtViewTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtTeacherDetail"
            android:layout_alignLeft="@+id/txtViewDescription"
            android:layout_alignStart="@+id/txtViewDescription"
            android:text="Lehrer"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtViewRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtRoomDetail"
            android:layout_alignLeft="@+id/txtClassDetail"
            android:layout_alignStart="@+id/txtClassDetail"
            android:text="Raum"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtDateDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgDate"
            android:layout_alignLeft="@+id/txtViewDate"
            android:layout_alignStart="@+id/txtViewDate"
            android:text="Montag, 24.07.2017" />

        <TextView
            android:id="@+id/txtClassDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgClass"
            android:layout_alignLeft="@+id/txtViewClass"
            android:layout_alignStart="@+id/txtViewClass"
            android:text="GO12" />

        <TextView
            android:id="@+id/txtInfoDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgDescription"
            android:layout_alignLeft="@+id/txtViewDescription"
            android:layout_alignStart="@+id/txtViewDescription"
            android:text="Herr Beispiel ist erkÃ¤ltet!" />

        <TextView
            android:id="@+id/txtTeacherDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgTeacher"
            android:layout_alignLeft="@+id/txtViewTeacher"
            android:layout_alignStart="@+id/txtViewTeacher"
            android:text="WIN" />

        <TextView
            android:id="@+id/txtRoomDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgRoom"
            android:layout_alignLeft="@+id/txtViewRoom"
            android:layout_alignStart="@+id/txtViewRoom"
            android:text="E203" />

        <ImageView
            android:id="@+id/imgDate"
            android:layout_width="25dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/txtViewDate"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:tint="@color/Grey"
            app:srcCompat="@drawable/ic_event_black_24dp" />

        <ImageView
            android:id="@+id/imgClass"
            android:layout_width="25dp"
            android:layout_height="36dp"
            android:layout_alignLeft="@+id/imgDate"
            android:layout_alignStart="@+id/imgDate"
            android:layout_below="@+id/imgDate"
            android:layout_marginTop="30dp"
            android:tint="@color/Grey"
            app:srcCompat="@drawable/ic_group_black_24dp" />

        <ImageView
            android:id="@+id/imgDescription"
            android:layout_width="25dp"
            android:layout_height="36dp"
            android:layout_alignLeft="@+id/imgTeacher"
            android:layout_alignStart="@+id/imgTeacher"
            android:layout_alignTop="@+id/txtViewClass"
            android:tint="@color/Grey"
            app:srcCompat="@drawable/ic_announcement_black_24dp" />

        <ImageView
            android:id="@+id/imgRoom"
            android:layout_width="25dp"
            android:layout_height="36dp"
            android:layout_alignLeft="@+id/imgClass"
            android:layout_alignStart="@+id/imgClass"
            android:layout_below="@+id/imgClass"
            android:layout_marginTop="30dp"
            android:tint="@color/Grey"
            app:srcCompat="@drawable/ic_room_black_24dp" />

        <ImageView
            android:id="@+id/imgTeacher"
            android:layout_width="25dp"
            android:layout_height="36dp"
            android:layout_alignBottom="@+id/imgDate"
            android:layout_marginLeft="162dp"
            android:layout_marginStart="162dp"
            android:layout_toEndOf="@+id/imgDate"
            android:layout_toRightOf="@+id/imgDate"
            android:tint="@color/Grey"
            app:srcCompat="@drawable/ic_person_black_24dp" />

    </RelativeLayout>

</LinearLayout>